  <% if(listProducts.length != null){ %>
  <div
    class="ps-section--features-product ps-section masonry-root pt-100 pb-100"
  >
    <div class="ps-container">
      <div class="ps-section__header mb-50">
        <h3 class="ps-section__title" data-mask="features">
          - Features Products
        </h3>
      </div>
      <div class="ps-section__content pb-50">
        <div
          class="masonry-wrapper"
          data-col-md="4"
          data-col-sm="2"
          data-col-xs="1"
          data-gap="30"
          data-radio="100%"
        >
          <div class="ps-masonry">
            <div class="grid-sizer"></div>
            <% listProducts[0].forEach(function(ele){ %>
            <div class="grid-item kids">
              <div class="grid-item__content-wrapper">
                <div class="ps-shoe mb-30">
                  <div class="ps-shoe__thumbnail">
                    <div
                      class="<%=ele.sale_price >0 ? 'ps-badge ps-badge--sale ps-badge--2nd' : 'ps-badge ps-badge--2nd'%>"
                    >
                      <span><%=ele.sale_price >0 ? 'Sale' : 'New'%></span>
                    </div>
                    <a class="ps-shoe__favorite" href="#"
                      ><i class="ps-icon-heart"></i></a
                    ><img
                      src="./images/products/<%=ele.image %>"
                      alt="<%=ele.name %>"
                    /><a class="ps-shoe__overlay" href="/product-detail"></a>
                  </div>
                  <div class="ps-shoe__content">
                    <div class="ps-shoe__detail">
                      <a class="ps-shoe__name" href="#"
                        ><%=ele.name.toUpperCase() %></a
                      >
                      <span class="ps-shoe__price">
                        <del
                          class="<%=ele.created_at < ele.created_end ? 'ps-shoe__price' : 'ps-shoe__price--hide' %>"
                          ><%=createComma.format(ele.price+`${numVnd}
                          `)+"VND"%></del
                        >
                        <span
                          ><%=ele.created_at < ele.created_end ?
                          createComma.format(ele.sale_price+`${numVnd} `)+"VND"
                          : createComma.format(ele.price+`${numVnd} `)+"VND"
                          %></span
                        >
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>

